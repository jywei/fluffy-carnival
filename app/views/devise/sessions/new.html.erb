<div class="signin">
  <div class="container-fluid">
    <div class="big">
      <h2>Log in</h2>
    </div>

    <div class="signinform julia_panel center">
      <div class="signintitle">
        <h3>登入</h3>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :"E-mail" %><br />
          <%= f.email_field :email, class: "julia_form" %>
        </div>

        <div class="field">
          <%= f.label :密碼 %><br />
          <%= f.password_field :password, autocomplete: "off", class: "julia_form" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :保持登入 %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "登入" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
  <%= render 'layouts/footer' %>
</div>
