<div class="signin">
  <div class="container-fluid">
    <div class="signinform julia_panel center">
      <div class="signintitle">
        <h3>Log in</h3>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="table table-hover form-group">
          <tbody>
            <tr>
              <td><%= f.label :"E-mail" %></td>
              <td><%= f.email_field :email, class: "julia_form" %></td>
            </tr>

            <tr>
              <td><%= f.label :密碼 %></td>
              <td><%= f.password_field :password, autocomplete: "off", class: "julia_form" %></td>
            </tr>
          </tbody>
        </table>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :保持登入 %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "登入" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
  <%= render 'layouts/footer' %>
</div>
