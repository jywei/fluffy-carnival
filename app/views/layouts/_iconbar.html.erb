<div class="top">
  <i class="fa fa-chevron-circle-up"></i>
</div>

<script type="text/javascript">

  $('.dropdown-toggle').dropdown();

  if( $(window).scrollTop() + $('.navicon').height() < $(window).height() ){
    $('.top').hide();
  };

  $(window).scroll(function(){
    if( $(window).scrollTop() + $('.navicon').height() > $(window).height() ){
      $('.top').show(1000);
    }
    else {
      $('.top').hide(1000);
    };
  });

  $('.top').click(function(){
    $('html, body').animate({ scrollTop: 0 }, 1000);
  });

  if( window.location.pathname === '/product_content' || window.location.pathname === '/notices' || window.location.pathname === '/my_account' || window.location.pathname === '/cart' || window.location.pathname === '/checkout/address_new' || window.location.pathname === '/checkout/payment' || window.location.pathname === '/users/sign_up' || window.location.pathname === '/users/sign_in'){
    $('.navicon').addClass('active');
  };

  if( window.location.pathname === '/contact' ){
    $('.top').hide();
  };

  var menutoggle = false;
  $('.felice').click(function(){
    if(menutoggle == false){
      menutoggle = true;
      $('.menu-box').show(0,function(){
        $('.menu-list').addClass('menu-list-active');
        $('.watermark').addClass('watermark-active');
        $('.menu-pink-ball').addClass('pink-ball-active');
        $('.navicon').removeClass('active');
      });
    }
    else {
      menutoggle = false;
      $('.menu-list').removeClass('menu-list-active');
      $('.watermark').removeClass('watermark-active');
      $('.menu-pink-ball').removeClass('pink-ball-active');
      setTimeout(function(){
        $('.menu-box').hide(0);
        if( $(window).scrollTop() + $('.navicon').height() > $(window).height() || ( window.location.pathname === '/product_content' )){
          $('.navicon').addClass('active');
        };
      },1000);
    }
  });

  $(function () {
    $('#search-btn').on('click', function(event) {
      event.preventDefault();
      $('#search').addClass('open');
      $('#search > form > input[type="search"]').focus();
    });

    $('#search, #search button.close').on('click keyup', function(event) {
      if (event.target == this || event.target.className == 'close' || event.keyCode == 27) {
          $(this).removeClass('open');
      }
    });

    //Do not include! This prevents the form from submitting for DEMO purposes only!
    $('form').submit(function(event) {
      event.preventDefault();
      return false;
    })
  });
</script>
